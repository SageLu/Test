<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_me_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="zz.com.test1.meaccount.MeAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_red_click_bg"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_red_click_bg"
            android:clickable="true"
            android:onClick="onBack"
            android:orientation="vertical"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="46dip"
                android:layout_height="46dip"
                android:layout_marginLeft="0dip"
                android:background="@drawable/btn_back" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.66"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_yingshou"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/btn_rb_click_selector"
                android:button="@null"
                android:gravity="center"
                android:text="营收"
                android:textColor="@drawable/textcolor_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/btn_rb_click_selector"
                android:button="@null"
                android:gravity="center"
                android:text="会员"
                android:textColor="@drawable/textcolor_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_jifen"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/btn_rb_click_selector"
                android:button="@null"
                android:gravity="center"
                android:text="积分"
                android:textColor="@drawable/textcolor_selector"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_kaquan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/btn_rb_click_selector"
                android:button="@null"
                android:gravity="center"
                android:text="卡券"
                android:textColor="@drawable/textcolor_selector"
                android:textSize="18sp" />
        </RadioGroup>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
